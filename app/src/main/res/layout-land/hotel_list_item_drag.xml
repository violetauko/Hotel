<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:id="@+id/hotelImageView"
            android:src="@drawable/hotel5"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/dragIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@id/hotelImageView"
            android:layout_alignBottom="@id/hotelImageView"
            android:gravity="bottom|left"
            android:src="@drawable/ic_baseline_reorder_24" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hotelNameTextView"
            android:textSize="14dp"
            android:text="Hotel Name"
            android:textColor="@color/purple_maroon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/categoryTextView"
            android:textSize="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="italic"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating"
            android:visibility="gone"
            android:id="@+id/ratingTextView"
            android:textColor="@color/purple_maroon"/>
    </LinearLayout>
</LinearLayout>